@page
@model MathGame.Pages.Games.GamesIndexModel
@{
}

<h1>@Model.Game.gametypetoString()</h1>
<h2>Good luck @Model.Player.Name</h2>
<h3>Question Number @Model.QuestionCount</h3>

<form method="post">
    <input asp-for="@Model.CorrectAnswer" value="@Model.Game.answer" type="hidden" />
    <input asp-for="@Model.Game.type" type="hidden" />
    <input asp-for="@Model.Player.Name" value="@Model.Player.Name" type="hidden" />
    <input asp-for="@Model.Player.id" value="@Model.Player.id" type="hidden" />
    <input asp-for="@Model.Player.Age" value="@Model.Player.Age" type="hidden" />
    <input asp-for="@Model.Score" value="@Model.Score " type="hidden" />
    <input asp-for="@Model.QuestionCount" value="@Model.QuestionCount" type="hidden" />
    <table>
        <tr>
            <td>
                @Model.Game.rand1
            </td>
            <td>
                @Model.Game.symbol
            </td>
            <td>
                @Model.Game.rand2
            </td>
            <td>
                =
            </td>
            <td>
                <input asp-for="@Model.Answer" type="text" />
            </td>
            <td>
                <button type="submit">Next</button>
            </td>
        </tr>
    </table>
    <h1>@Model.Message</h1>
    <h2>Your score is @Model.Score</h2>
</form>
